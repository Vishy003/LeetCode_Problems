class Solution {
    public boolean isArmstrong(int n) {
        int orig = n;
        int count = 0;

        // Step 1: Count digits
        int temp = n;
        while (temp > 0) {
            count++;
            temp /= 10;
        }

        // Step 2: Calculate sum of digits raised to power 'count'
        int sum = 0;
        temp = n;
        while (temp > 0) {
            int digit = temp % 10;
            sum += Math.pow(digit, count);
            temp /= 10;
        }

        // Step 3: Check if sum matches original number
        return sum == orig;
    }
}
